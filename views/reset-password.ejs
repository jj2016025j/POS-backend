<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/page.css" />
  </head>
  <body>
    <%- include ("partials/nav") %>

    <div class="container mt-5" style="position: relative; top: 150px">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <form action="/auth/reset-password" method="POST">
            <h5 class="mt-5 mb-3" style="color: gray">
              在下面輸入新的密碼。
              <hr />
            </h5>
            <%- include ("partials/message") %>
            <input type="hidden" name="token" value="<%= token %>" />
            <div class="form-group">
              <label for="newPassword" class="mb-2">新密碼</label>
              <div class="showPwd">
                <input
                  type="password"
                  class="form-control password me-2"
                  id="newPassword"
                  placeholder="請輸入密碼"
                  name="newPassword"
                />
                <img src="/image/eye-close.png" id="eyeicon" />
              </div>
            </div>
            <div class="form-group">
              <label for="confirmPassword" class="mb-2">再輸入一次新密碼</label>
              <div class="showPwd">
                <input
                  type="password"
                  class="form-control password me-2"
                  id="confirmPassword"
                  placeholder="請輸入密碼"
                  name="confirmPassword"
                />
                <img src="/image/eye-close.png" id="eyeicon2" />
              </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-2">
              儲存
            </button>
          </form>
        </div>
      </div>
    </div>

    <%- include ("partials/footer") %>

    <script>
      let eyeicon = document.getElementById("eyeicon");
      let eyeicon2 = document.getElementById("eyeicon2");
      let confirmPassword = document.getElementById("confirmPassword");
      let newPassword = document.getElementById("newPassword");

      eyeicon.onclick = function () {
        if (newPassword.type == "password") {
          newPassword.type = "text";
          eyeicon.src = "/image/eye-open.png";
        } else {
          newPassword.type = "password";
          eyeicon.src = "/image/eye-close.png";
        }
      };

      eyeicon2.onclick = function () {
        if (confirmPassword.type == "password") {
          confirmPassword.type = "text";
          eyeicon2.src = "/image/eye-open.png";
        } else {
          confirmPassword.type = "password";
          eyeicon2.src = "/image/eye-close.png";
        }
      };
    </script>
  </body>
</html>
